  }                                                                      \
  inline UV vec2##T OPERATOR(UV TYPE a, UV vec2##T b) {                  \
    return make_vec2##T(a OP b.x, a OP b.y);                             \
  }                                                                      \
  /* vec3 */                                                             \
  inline UV vec3##T OPERATOR(UV vec3##T a, UV vec3##T b) {               \
