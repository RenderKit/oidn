    return make_vec3##T(a.x OP b, a.y OP b, a.z OP b);                   \
  }                                                                      \
  inline UV vec3##T OPERATOR(UV TYPE a, UV vec3##T b) {                  \
    return make_vec3##T(a OP b.x, a OP b.y, a OP b.z);                   \
  }                                                                      \
  /* vec4 */                                                             \
